---
import type { ProjectDto } from "@/types/";
import ProjectImage from "@/../public/project.png";

interface Props {
  slug: string;
  data: ProjectDto;
}

const { slug, data } = Astro.props;
console.info(Astro.props);
const { title, description, tags, image } = data;
---

<article
  class="mb-4 mx-4 px-2 flex flex-col flex-wrap justify-between md:items-center"
>
  <h3 class="text-xl md:text-2xl font-semibold text-yellow-300 mb-2 text-wrap">
    {title}
  </h3>
  <p class="text-white/80 text-base md:text-lg mb-4 text-wrap">
    {description}
  </p>

  <ul class="flex flex-row gap-2 flex-wrap mb-4">
    {
      tags.map((tag) => (
        <li class="text-xs rounded-full border-2 border-white/10 flex justify-center items-center gap-x-2 py-2 px-4 bg-white/5 hover:scale-110 hover:bg-white/10 transition">
          {tag}
        </li>
      ))
    }
  </ul>

  <img
    src={image}
    class="rounded shadow-2xl shadow-white/10 mx-auto my-4 w-full"
    alt={`Imagen del proyecto ${title}`}
  />
</article>
